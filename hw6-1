import time

class TraficLight():

    def __init__(self):
        self.__color = ['RED', 'YELLOW', 'GREEN']

    def running(self):
        i = 1
        while i == 1:
            print(self.__color[0])
            time.sleep(7)
            print(self.__color[1])
            time.sleep(2)
            print(self.__color[2])
            time.sleep(5)

tl1 = TraficLight()
tl1.running()

